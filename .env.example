# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Dangi - Environment Variables Template
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# Copy this file to .env and fill in your actual values
# Do NOT commit your .env file to version control
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ─────────────────────────────────────────────────────────────
# Node Environment
# ─────────────────────────────────────────────────────────────
# Options: development | production | test
NODE_ENV="development"

# ─────────────────────────────────────────────────────────────
# Database
# ─────────────────────────────────────────────────────────────
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/dangi"

# ─────────────────────────────────────────────────────────────
# JWT Authentication
# ─────────────────────────────────────────────────────────────
# IMPORTANT: Must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secret-key-at-least-32-characters-long"

# ─────────────────────────────────────────────────────────────
# S3-Compatible Storage (Optional)
# ─────────────────────────────────────────────────────────────
# Leave empty if not using S3
# If you provide any S3 variable, you must provide all of them

# S3 endpoint URL (e.g., https://s3.amazonaws.com)
S3_ENDPOINT=""

# S3 bucket name
S3_BUCKET=""

# S3 access key
S3_ACCESS_KEY=""

# S3 secret key
S3_SECRET_KEY=""

# S3 region (default: us-east-1)
S3_REGION="us-east-1"

# ─────────────────────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────────────────────
# Public URL of your application (optional)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ─────────────────────────────────────────────────────────────
# Logging
# ─────────────────────────────────────────────────────────────
# Options: error | warn | info | http | verbose | debug | silly
# Default: info (production) | debug (development)
LOG_LEVEL="info"

# ─────────────────────────────────────────────────────────────
# Redis Rate Limiting (Optional - for production)
# ─────────────────────────────────────────────────────────────
# Leave empty if not using Redis-based rate limiting
# If you provide any Redis variable, you must provide both

# Upstash Redis REST URL
UPSTASH_REDIS_REST_URL=""

# Upstash Redis REST Token
UPSTASH_REDIS_REST_TOKEN=""

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Notes
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 1. JWT_SECRET: Generate a strong random key
#    $ openssl rand -base64 32
#
# 2. DATABASE_URL: For local development with Docker:
#    $ docker run --name dangi-postgres -e POSTGRES_PASSWORD=password \
#      -e POSTGRES_DB=dangi -p 5432:5432 -d postgres:14
#
# 3. S3 Storage: Optional - only needed for file uploads
#    Can use AWS S3, DigitalOcean Spaces, Minio, or any S3-compatible storage
#
# 4. Redis: Optional - only needed for production with multiple instances
#    In-memory rate limiting works fine for single-instance deployments
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
